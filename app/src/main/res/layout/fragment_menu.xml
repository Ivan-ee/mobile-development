<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MenuFragment">

    <!-- Заголовок фрагмента -->
    <TextView
        android:id="@+id/menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Меню"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Описание фрагмента -->
    <TextView
        android:id="@+id/menu_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Вся навигация в приложении реализована через фрагменты, обеспечивая плавный и удобный переход между разделами."
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/menu_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9" />

    <!-- Кнопка "Работа с API" -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_api"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Работа с API"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/menu_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Кнопка "Работа с ROOM" -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_room"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Работа с ROOM"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_api"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Кнопка "Профиль" -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Профиль"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Кнопка "Работа с ИИ" -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_ai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Работа с ИИ"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
